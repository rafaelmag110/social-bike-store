extends layout

block content
        header(class="w3-container w3-center w3-padding-12")
            h1(class="w3-xxxlarge"  style="font-family:Lucida Sans Unicode;")
                b Importação/Exportação de dados 
                h6 
                    i(style="font-family:Lucida Sans Unicode;") Social Bike Store
            hr(style="color:white;")
        .w3-container.w3-cell-row
            .w3-container.w3-cell
                h3 
                    b Importação:
                br
                form.w3.container(method="POST" action="/import/" enctype='multipart/form-data')
                    h4 
                        b 1. JSON:
                    input.w3-input(type='file' name='json' required)
                    hr(style="color:white;")
                    h4 
                        b 2. Zip com fotos dos utilizadores:
                    input.w3-input(type='file' name='users' required)
                    hr(style="color:white;")
                    h4 
                        b 3. ZIP com fotos dos posts:
                    input.w3-input(type='file' name='posts' required)
                    br
                    input.w3-btn.w3-grey.w3-round(type="submit" value="Importar")
            .w3-container.w3-cell.w3-border-left2(style="width:50%")
                h3 
                    b Exportação:
                br
                h4 
                    b 1. Gerar ZIP de exportação:
                input.w3-btn.w3-grey.w3-round(onclick="location.href='/api/posts/export/'" value="Gerar")
                hr(style="color:white;")
                h4 
                    b 2. Exportar dados:
                input.w3-btn.w3-grey.w3-round(onclick="location.href='/share/export.zip'" value="Download")