extends layout

block content
        header(class="w3-container w3-center w3-padding-12")
            h1(class="w3-xxxlarge"  style="font-family:Lucida Sans Unicode;")
                b Importação de dados 
                h6 
                    i(style="font-family:Lucida Sans Unicode;") Social Bike Store
            hr(style="color:white;")
        .w3-container
            form.w3.container(method="POST" action="/import/" enctype='multipart/form-data')
                h2 
                    b JSON:
                input.w3-input(type='file' name='json' required)
                hr(style="color:white;")
                h2 
                    b Zip com fotos dos utilizadores:
                input.w3-input(type='file' name='users' required)
                hr(style="color:white;")
                h2 
                    b ZIP com fotos dos posts:
                input.w3-input(type='file' name='posts' required)
                br
                input.w3-btn.w3-grey.w3-round(type="submit" value="Submeter")