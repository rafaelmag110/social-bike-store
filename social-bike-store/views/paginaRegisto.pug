extends layoutOffline

block content
    div(class="bgimg")
        .w3-container.w3-padding-64
            h2 Register
            .w3-container
                form.w3-container(method='POST' action='/users/registo')
                    label
                        b Email
                    input.w3-input(type='text' name='email' required)
                    label
                        b Password
                    input.w3-input(type='password' name='password' required)
                    label
                        b Name
                    input.w3-input(type='text' name='name' required)
                    label
                        b Birth
                    input.w3-input(type='date' name='birth' required)
                    label
                        b CellPhone
                    input.w3-input(type='text' name='cellPhone' pattern="9[0-9]{8}" required)
                    label
                        b City
                    input.w3-input(type='text' name='city' required)
                    label
                        b District
                    input.w3-input(type='text' name='district' required)
                    label
                        b Nationality
                    input.w3-input(type='text' name='nationality' required)
                    br
                    input.w3-btn.w3-grey.w3-round(type="submit" value="Confirm" onclick="location.href='/'")