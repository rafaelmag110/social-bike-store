extends layoutOnline

block content
    div(class="bgimg")
      .w3-container.w3-padding-64
        form.w3-container(method="GET" action="/searchBike")
          .w3-col.l3.m3
            select.w3-select-bigger(name='make' id='makemenu' class="w3-select" required)
                option(value="" disabled select) ---          .w3-col.l3.m3
          .w3-col.l3.m3
            select.w3-select-bigger(name='model' id='modelmenu' class="w3-select" required)
                option(value="all") All
          .w3-col.l3.m3
            input.w3-btn.w3-light-grey.w3-border.w3-select-bigger(type='submit' value='Procurar')
      if posts
        .w3-row
          .w3-col-l6.m6
            each post in posts
              .w3-container.w3-border
                .w3-container.w3-border
                  .w3-card-4
                    header.w3-container.w3-khaki.w3-border
                      h3=post.user.name+" - "+post.postDate
                    .w3-col.l6.m6
                      .w3-container
                        img(src=""+post.picture width="425px" height="auto")
                    .w3-col.l6.m6.w3-display-container
                      .w3-container
                        .w3-ul
                          li
                            b Make 
                            span=post.bike.make
                          li
                            b Model 
                            span=post.bike.model
                          li
                            b Year 
                            span=post.bike.year
                          li
                            b Month 
                            span=post.bike.month
                          li
                            b Cylinder Capacity 
                            span=post.bike.cylinderCapacity
                          li
                            b Power  
                            span=post.bike.power
                          li
                            b Kilometers 
                            span=post.bike.kilometers
                          li
                            b Condition 
                            span=post.bike.condition
                    footer
                      .w3-btn.w3-khaki(value=post.likes id="like"+post._id) Like 
                        label="("+post.likes+")"
                      .w3-btn.w3-khaki(value=post.dislikes id="dislike"+post._id) Dislike 
                        label="("+post.dislikes+")"
                .w3-container.w3-border
                  if post.opinions
                    .w3-card-4
                    header.w3-container
                      h4 Comments
                    .w3-container(id="opinions"+post._id)
                      each opinion in post.opinions
                        p
                          b=opinion.user.name
                        p=opinion.text

                form.w3-container(id="opinion"+post._id)
                  textarea.w3-input.w3-border(type='text' id='body'+post._id placeholder='Write something...!')
                  input.w3-btn.w3-light-grey.w3-border(id="addOpinion"+post._id value='Comment')